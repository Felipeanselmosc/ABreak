@model IEnumerable<ABreak.Application.DTOs.TipoPausaDTO>

@{
    ViewData["Title"] = "Tipos de Pausa";
}

<div class="container">
    <div class="row mb-3">
        <div class="col-md-6">
            <h2>📋 Tipos de Pausa</h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Create" class="btn btn-primary">
                ➕ Novo Tipo
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Ícone</th>
                        <th>Nome</th>
                        <th>Descrição</th>
                        <th>Duração Recomendada</th>
                        <th>Status</th>
                        <th class="text-end">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tipo in Model)
                    {
                        <tr>
                            <td style="font-size: 1.5rem;">@tipo.Icone</td>
                            <td><strong>@tipo.Nome</strong></td>
                            <td>@tipo.Descricao</td>
                            <td>@tipo.DuracaoRecomendadaMinutos min</td>
                            <td>
                                @if (tipo.Ativo)
                                {
                                    <span class="badge bg-success">Ativo</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inativo</span>
                                }
                            </td>
                            <td class="text-end">
                                <a asp-action="Details" asp-route-id="@tipo.Id" class="btn btn-sm btn-info">👁️ Detalhes</a>
                                <a asp-action="Edit" asp-route-id="@tipo.Id" class="btn btn-sm btn-warning">✏️ Editar</a>
                                <a asp-action="Delete" asp-route-id="@tipo.Id" class="btn btn-sm btn-danger">🗑️ Excluir</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>