@model ABreak.Application.DTOs.TipoPausaDTO

@{
    ViewData["Title"] = "Detalhes do Tipo de Pausa";
}

<div class="container">
    <h2>👁️ Detalhes do Tipo de Pausa</h2>
    <hr />

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Ícone</dt>
                <dd class="col-sm-9" style="font-size: 2rem;">@Model.Icone</dd>

                <dt class="col-sm-3">Nome</dt>
                <dd class="col-sm-9">@Model.Nome</dd>

                <dt class="col-sm-3">Descrição</dt>
                <dd class="col-sm-9">@Model.Descricao</dd>

                <dt class="col-sm-3">Duração Recomendada</dt>
                <dd class="col-sm-9">@Model.DuracaoRecomendadaMinutos minutos</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    @if (Model.Ativo)
                    {
                        <span class="badge bg-success">Ativo</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inativo</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">✏️ Editar</a>
        <a asp-action="Index" class="btn btn-secondary">⬅️ Voltar</a>
    </div>
</div>