@model ABreak.Application.DTOs.TipoPausaDTO

@{
    ViewData["Title"] = "Excluir Tipo de Pausa";
}

<div class="container">
    <h2>🗑️ Excluir Tipo de Pausa</h2>
    <hr />

    <div class="alert alert-danger">
        <h4>Tem certeza que deseja excluir este tipo de pausa?</h4>
    </div>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Ícone</dt>
                <dd class="col-sm-9" style="font-size: 2rem;">@Model.Icone</dd>

                <dt class="col-sm-3">Nome</dt>
                <dd class="col-sm-9">@Model.Nome</dd>

                <dt class="col-sm-3">Descrição</dt>
                <dd class="col-sm-9">@Model.Descricao</dd>

                <dt class="col-sm-3">Duração Recomendada</dt>
                <dd class="col-sm-9">@Model.DuracaoRecomendadaMinutos minutos</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">🗑️ Confirmar Exclusão</button>
        <a asp-action="Index" class="btn btn-secondary">❌ Cancelar</a>
    </form>
</div>