@model IEnumerable<ABreak.Application.DTOs.PausaDTO>

@{
    ViewData["Title"] = "Pausas";
}

<div class="container">
    <div class="row mb-3">
        <div class="col-md-6">
            <h2>⏸️ Pausas Registradas</h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Create" class="btn btn-primary">
                ➕ Registrar Pausa
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Usuário</th>
                        <th>Tipo</th>
                        <th>Data/Hora Início</th>
                        <th>Duração</th>
                        <th>Status</th>
                        <th class="text-end">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pausa in Model)
                    {
                        <tr>
                            <td>@pausa.UsuarioNome</td>
                            <td>
                                <span style="font-size: 1.2rem;">@pausa.TipoPausaIcone</span>
                                @pausa.TipoPausaNome
                            </td>
                            <td>@pausa.DataHoraInicio.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@pausa.DuracaoMinutos min</td>
                            <td>
                                @if (pausa.Completada)
                                {
                                    <span class="badge bg-success">✅ Completada</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">⏳ Pendente</span>
                                }
                            </td>
                            <td class="text-end">
                                <a asp-action="Details" asp-route-id="@pausa.Id" class="btn btn-sm btn-info">👁️ Detalhes</a>
                                <a asp-action="Edit" asp-route-id="@pausa.Id" class="btn btn-sm btn-warning">✏️ Editar</a>
                                <a asp-action="Delete" asp-route-id="@pausa.Id" class="btn btn-sm btn-danger">🗑️ Excluir</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>