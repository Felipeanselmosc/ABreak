@model ABreak.Application.DTOs.UsuarioDTO

@{
    ViewData["Title"] = "Detalhes do Usuário";
}

<div class="container">
    <h2>👁️ Detalhes do Usuário</h2>
    <hr />

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Nome</dt>
                <dd class="col-sm-9">@Model.Nome</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Data de Cadastro</dt>
                <dd class="col-sm-9">@Model.DataCadastro.ToString("dd/MM/yyyy HH:mm")</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    @if (Model.Ativo)
                    {
                        <span class="badge bg-success">Ativo</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inativo</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">✏️ Editar</a>
        <a asp-action="Index" class="btn btn-secondary">⬅️ Voltar</a>
    </div>
</div>