@model ABreak.Application.DTOs.UsuarioDTO

@{
    ViewData["Title"] = "Excluir Usuário";
}

<div class="container">
    <h2>🗑️ Excluir Usuário</h2>
    <hr />

    <div class="alert alert-danger">
        <h4>Tem certeza que deseja excluir este usuário?</h4>
    </div>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Nome</dt>
                <dd class="col-sm-9">@Model.Nome</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Data de Cadastro</dt>
                <dd class="col-sm-9">@Model.DataCadastro.ToString("dd/MM/yyyy")</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">🗑️ Confirmar Exclusão</button>
        <a asp-action="Index" class="btn btn-secondary">❌ Cancelar</a>
    </form>
</div>